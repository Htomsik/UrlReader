<Window
    Height="450"
    Style="{StaticResource MaterialDesignWindow}"
    Title="UrlReader"
    Width="800"
    d:DataContext="{d:DesignInstance {x:Type Vmds:MainWindowVmd},
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d"
    x:Class="UrlReader.VW.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:Vmds="clr-namespace:Core.VMDs.Windows;assembly=Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UrlReader"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <!--  Manage file  -->
        <Grid Grid.Row="0" />

        <!--  Manage Urls  -->
        <Grid Grid.Row="1">
            <DataGrid IsReadOnly="True" ItemsSource="{Binding ServiceUrls}" />
        </Grid>

        <!--  logger Notifier  -->
        <Grid Grid.Row="2">
            <TextBlock Text="{Binding LastLog}" />
        </Grid>

    </Grid>

</Window>
